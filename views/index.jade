extends layout

block content
    h1= title
    p Welcome to #{title}

    ul
        unless userLoggedIn
            li
                a(href='/register') Create Account
            li
                a(href='/login') Login
        if userLoggedIn
            li
                a(href='/profile') Profile
            li
                a(href='/article/add') Create Article
            li
                a(href='/logout') Logout

    each article in articles
        div
            div
                a(href='/article/' + article._id)
                    b #{article.title}
                div Author:
                    b #{article.author}
            div #{article.body}
        br